@{
}

<form method='post' action="/user">
    Sign Up <br>
    <label> Username: </label>
    <input type="text" name='username' value="@ViewBag.Username" /> <br>
    <label> Email: </label>
    <input type="email" name="email" value="@ViewBag.Email" /> <br>
    <label> Password: </label>
    <input type="password" name="password" value="@ViewBag.Password" /> <br />
    <label> Verify Password: </label>
    <input type="password" name="verify" />
    @if (ViewBag.Password != ViewBag.verify)
    {
        <p style="font-weight:lighter; color:red;">@ViewBag.Error</p>
    }
    <input type="submit" />
</form>
